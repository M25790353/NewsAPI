// CI  for when a commit to master
//  
pipeline {
    agent {
       docker { image 'maven:3.9.9-eclipse-temurin-21-alpine' }
    }

    stages {
        stage('Code Checkout') {
            steps {
                echo 'Checkout..'
                git branch: 'master', url:'https://github.com/M25790353/NewsAPI.git'
            }
        }
        stage('Build') {
            steps {
                echo '!!!!! Building..'
                sh 'mvn -B'
            
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}